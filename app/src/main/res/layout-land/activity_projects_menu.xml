<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="qapec.qineapp.projects_menu">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height= "wrap_content"
            android:layout_weight="3"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    style="@style/ProjectMenuButtons"
                    android:tag="math"
                    android:id="@+id/math"
                    android:layout_column="0"
                    android:src="@drawable/math"
                    android:textAlignment="center"
                    />

                <ImageButton
                    style="@style/ProjectMenuButtons"
                    android:tag="biology"
                    android:id="@+id/bio"
                    android:layout_column="2"
                    android:src="@drawable/biology"/>

                <ImageButton
                    style="@style/ProjectMenuButtons"
                    android:tag="chemistry"
                    android:id="@+id/chm"
                    android:layout_column="3"
                    android:src="@drawable/chemistry"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Math"
                    android:layout_weight="2"

                    android:textAlignment="center"
                    android:layout_column="0"
                    />

                <TextView
                    android:text="Biology"
                    android:textAlignment="center"
                    android:layout_weight="2"
                    android:layout_column="2"
                    />

                <TextView
                    android:text="Chemistry"
                    android:textAlignment="center"
                    android:layout_weight="2"
                    android:layout_column="3"
                    />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    style="@style/ProjectMenuButtons"
                    android:tag="physics"
                    android:id="@+id/phy"
                    android:layout_column="0"
                    android:src="@drawable/physics"
                    />

                <ImageButton
                    style="@style/ProjectMenuButtons"
                    android:tag="economics"
                    android:id="@+id/eco"
                    android:layout_column="2"
                    android:src="@drawable/economics"/>

                <ImageButton
                    style="@style/ProjectMenuButtons"
                    android:tag="history"
                    android:id="@+id/history"
                    android:layout_weight="2"
                    android:layout_column="3"
                    android:src="@drawable/history"/>

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Physics"
                    android:layout_weight="2"
                    android:textAlignment="center"
                    android:layout_column="0"
                    />

                <TextView
                    android:text="Economics"
                    android:textAlignment="center"
                    android:layout_weight="2"
                    android:layout_column="2"
                    />

                <TextView
                    android:text="History"
                    android:textAlignment="center"
                    android:layout_weight="2"
                    android:layout_column="3"
                    />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    style="@style/ProjectMenuButtons"
                    android:tag="amharic"
                    android:id="@+id/amharic"
                    android:layout_column="0"
                    android:src="@drawable/amharic"
                    />

                <ImageButton
                    style="@style/ProjectMenuButtons"
                    android:tag="english"
                    android:id="@+id/english"
                    android:layout_column="2"
                    android:src="@drawable/english"/>

                <ImageButton
                    style="@style/ProjectMenuButtons"
                    android:tag="ict"
                    android:id="@+id/ict"
                    android:layout_weight="2"
                    android:layout_column="3"
                    android:src="@drawable/ict"/>

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Amharic"
                    android:layout_weight="2"

                    android:textAlignment="center"
                    android:layout_column="0"
                    />

                <TextView
                    android:text="English"
                    android:textAlignment="center"
                    android:layout_weight="2"
                    android:layout_column="2"
                    />

                <TextView
                    android:text="IT"
                    android:textAlignment="center"
                    android:layout_weight="2"
                    android:layout_column="3"
                    />
            </TableRow>

        </TableLayout>
    </ScrollView>

    <fragment

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pro_menu"
            android:name="qapec.qineapp.aboutProjectFragment"
            tools:layout =  "@layout/fragment_about_project"
            />
</LinearLayout>
